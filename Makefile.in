todaysnap = ${mirrordir}/portage-${today}.sqfs
yesterdaysnap = ${mirrordir}/portage-${yesterday}.sqfs

cleanall: all
	rm -f ${mirrordir}/*-${yesterday}.sqdelta

${todaysnap}: ${repodir}
	mksquashfs $< $@ -comp lzo -no-xattrs -force-uid portage -force-gid portage
	touch ${tempdir}/portage-${yesterday}.stamp

${revdeltadir}/portage-${today}-${yesterday}.sqdelta: ${todaysnap} ${yesterdaysnap}
	squashdelta $^ $@

